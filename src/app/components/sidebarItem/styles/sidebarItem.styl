.sidebar
    .sidebar-menu
        padding 0
        .sidebar-item
            list-style none
            font-family helvetica
            &:hover,&.active
                background #3f424e
                border-left 4px solid #bb1966
            a
                color #ede2e2
                text-align left
                width 100%
                height 100%
                display block
                padding 10px
                &:hover,&.active
                    text-decoration none
                    cursor pointer
                &:focus
                    text-decoration none
