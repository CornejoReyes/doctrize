bg-color = #424242
brd-color = #2196F3
.sidebar
    .sidebar-menu
        padding 0
        .sidebar-item
            list-style none
            font-family helvetica
            &:hover,&.active
                background bg-color
                //border-left 4px solid #bb1966
                border-left 4px solid brd-color
            a
                color #ede2e2
                text-align left
                width 100%
                height 100%
                display block
                padding 10px
                &:hover,&.active
                    text-decoration none
                    cursor pointer
                &:focus
                    text-decoration none
